# qubit-os-hardware development environment (managed by direnv)
#
# PyO3 needs libpython3.14.so on the library path at runtime.
# Linuxbrew installs it to /home/linuxbrew/.linuxbrew/lib.

# Add Linuxbrew lib to LD_LIBRARY_PATH for PyO3/libpython
export LD_LIBRARY_PATH="/home/linuxbrew/.linuxbrew/lib${LD_LIBRARY_PATH:+:$LD_LIBRARY_PATH}"

# Point PyO3 at the Linuxbrew Python (also in .cargo/config.toml for cargo)
export PYO3_PYTHON="/home/linuxbrew/.linuxbrew/bin/python3"
